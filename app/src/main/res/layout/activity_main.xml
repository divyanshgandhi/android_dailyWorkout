<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/main_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:textSize="38sp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="true"
        android:fontFamily="@font/sigmar_one"
        android:text="@string/go_hard"/>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="true"
        android:layout_below="@+id/main_line"
        android:fontFamily="@font/sigmar_one"
        android:text="@string/or"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/or"
        android:textSize="38sp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="true"
        android:fontFamily="@font/sigmar_one"
        android:text="@string/go_home"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-18dp"
        android:text="0"
        android:textColor="@color/colorPrimary"
        android:textSize="96sp"/>

    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/number"
        android:layout_marginTop="96dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/plus_five_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@color/colorAccentDark"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                android:text="+ 5"/>

            <Button
                android:id="@+id/plus_ten_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@color/colorAccentDark"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                android:text="+ 10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/plus_fifteen_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@color/colorAccentDark"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                android:text="+ 15"/>

            <Button
                android:id="@+id/plus_twenty_five_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@color/colorAccentDark"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                android:text="+ 25"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/reset"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_reset"
        android:tint="@color/colorAccent"/>


</RelativeLayout>